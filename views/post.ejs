<!DOCTYPE html>
<html lang="pt-BR">
    <head>
        <% include ./partials/head %>
    </head>
    <body>
        <header class="container-fluid barraNavTopo mb-4 pb-3 pt-3">
            <% include ./partials/header %>
        </header>

        <!-- Menu de navegação esquerdo -->
        <nav class="navbarLateral">
            <% include ./partials/sidenavbar %>
        </nav>

        <main class="container">
            <div class="row justify-content-md-center">
                <div class="postsDoBlog col-md-8">
                    <article class="post">
                        <% if (status === 200) { %> 
                            <h1><%= title %></h1>
                            <h5><%= published.getDay() %>/<%= published.getMonth()+1 %>/<%= published.getFullYear() %></h5>
                            <h5><%= content.author.first_name%> <%= content.author.last_name%></h5>
                            <%- content.body %>
                        <% } else if (status === 404) { %>
                            <h3>Página não encontrada!</h3>
                        <% } else { %> 
                            <h3>Ocorreu algum problema.</h3>
                        <% } %>
                    </article>
                </div>
            </div>
        </main>
        <footer class="container-fluid mt-5 text-center">
            <% include ./partials/footer %>
        </footer>

        <!-- jQuery, Popper.js, JavaScript -->
        <!-- RETIRAR AS BIBLIOTECAS LOCAIS AO LANÇAR O SITE! -->
        <script type="text/javascript" src="/libs/popper.js/1.12.9/umd/popper.min.js"></script>
        <script type="text/javascript" src="/libs/bootstrap/4.0.0/js/bootstrap.min.js"></script>
        <!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script> -->
        <script>
        /* abre/fecha sidenavbar */
        $(document).ready(function () {
            var toggle = $('#sidenav-toggle');
            var navbarLateral = $('.navbarLateral');
            $('#sidenav-toggle').on('click', function () {
                $(this).toggleClass('abreFechaMenu');
    
                if ( -1 !== $(toggle).prop('class').search('abreFechaMenu') ) {
                    $(navbarLateral).css('width', 190);
                } else {
                    $(navbarLateral).css('width', 0);
                }
            });
        });
        </script>
    </body>
</html>