<!DOCTYPE html>
<html lang="pt-BR">
    <head>
        <% include ./partials/headpost %>
    </head>
    <body>
        <!-- Facebook JavaScript SDK -->
        <div id="fb-root"></div>
        <script>(function(d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = 'https://connect.facebook.net/pt_BR/sdk.js#xfbml=1&version=v3.1';
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>
        <!-- Twitter JS -->
        <script>window.twttr = (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0],
            t = window.twttr || {};
        if (d.getElementById(id)) return t;
        js = d.createElement(s);
        js.id = id;
        js.src = "https://platform.twitter.com/widgets.js";
        fjs.parentNode.insertBefore(js, fjs);
        
        t._e = [];
        t.ready = function(f) {
            t._e.push(f);
        };
        
        return t;
        }(document, "script", "twitter-wjs"));</script>

        <header class="container-fluid barraNavTopo pb-3 pt-3">
            <% include ./partials/header %>
        </header>

        <!-- Menu de navegação esquerdo -->
        <nav class="navbarLateral">
            <% include ./partials/sidenavbar %>
        </nav>

        <main class="container-fluid">
            <div class="container content">
                <div class="row justify-content-md-center">
                    <div class="postsDoBlog col-md-8">
                        <% if (status === 200) { %>
                            <article class="post">
                                    <div class="post-header">
                                        <a class="post-header-author-img" href="/autor"><img class="img-fluid" src="" alt="" /></a>
                                        <a href="/autor"><%= content.author.first_name%> <%= content.author.last_name%></a>
                                        <p><%= published.getDay()+1 %>/<%= published.getMonth()+1 %>/<%= published.getFullYear() %></p>
                                    </div>
                                    <div class="post-body">
                                        <h1><%= title %></h1>
                                        <%- content.body %>
                                    </div>
                                </article>
                            </div>
                        <% } else if (status === 404) { %>
                            <h3>Página não encontrada!</h3>
                        <% } else { %> 
                            <h3>Ocorreu algum problema.</h3>
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="after-content">
                <div class="container">
                    <span class="share-title">Compartilhe</span>
                    <ul class="post-social">
                        <!-- linkedin -->
                        <li>
                            <!-- <script type="IN/Share" data-url="https://papiloscopiando.com.br/post/"></script> -->
                            <a href="https://www.linkedin.com/shareArticle?mini=true&url=https://papiloscopiando.com.br/post/<%= content.slug %>&source=Papiloscopiando" target="_blank"><i class="fab fa-linkedin-in"></i></a>
                        </li>
                        <!-- twitter -->
                        <li>
                            <a href="https://twitter.com/intent/tweet?url=https://papiloscopiando.com.br/post/<%= content.slug %>" target="_blank"><i class="fab fa-twitter"></i></a>
                        </li>
                        <!-- facebbok -->
                        <li>
                            <!-- <div class="fb-share-button" data-href="https://papiloscopista.com.br/post/<%= content.slug %>" data-layout="button" data-size="small" data-mobile-iframe="true"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fpapiloscopista.com.br%2Fpost%2F<%= content.slug %>&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Compartilhar</a></div> -->
                            <div class="fb-share-button" data-href="https://papiloscopiando.com.br/post/terceiro-post" data-layout="button" data-size="small" data-mobile-iframe="false"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fpapiloscopiando.com.br%2Fpost%2F<%= content.slug %>&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Compartilhar</a></div>
                        </li>
                    </ul>
                    <div class="post-comments">
                        <div class="row justify-content-md-center">
                            <div class="col-md-8">
                                <div id="disqus_thread"></div>
                                <script>
                                /**
                                *  RECOMMENDED CONFIGURATION VARIABLES: EDIT AND UNCOMMENT THE SECTION BELOW TO INSERT DYNAMIC VALUES FROM YOUR PLATFORM OR CMS.
                                *  LEARN WHY DEFINING THESE VARIABLES IS IMPORTANT: https://disqus.com/admin/universalcode/#configuration-variables*/
                                
                                var disqus_config = function () {
                                this.page.url = "https://papiloscopiando.com.br/post/<%= content.slug %>";  // Replace PAGE_URL with your page's canonical URL variable
                                this.page.identifier = "<%= title %>"; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
                                };
                               
                                (function() { // DON'T EDIT BELOW THIS LINE
                                var d = document, s = d.createElement('script');
                                s.src = 'https://papiloscopiando.disqus.com/embed.js';
                                s.setAttribute('data-timestamp', +new Date());
                                (d.head || d.body).appendChild(s);
                                })();
                                </script>
                                <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <footer class="container-fluid text-center">
            <% include ./partials/footer %>
        </footer>

        <!-- jQuery, Popper.js, JavaScript -->
